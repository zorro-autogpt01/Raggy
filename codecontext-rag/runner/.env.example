# Runner configuration
RUNNER_API_KEY=your-secure-api-key-here
RUNNER_HOST=0.0.0.0  # Listen on all interfaces
RUNNER_PORT=8001

# LLM Gateway (must be accessible from runner)
LLM_GATEWAY_URL=https://llm-gateway.yourdomain.com:3010
# OR use API key if gateway requires it
LLM_GATEWAY_API_KEY=your-llm-key

# Optional: RAG callback URL
RAG_API_URL=https://rag.yourdomain.com:8000
RAG_API_KEY=your-rag-api-key

# Validation settings
MAX_VALIDATION_ATTEMPTS=3
SANDBOX_TIMEOUT=600

# Storage
WORKSPACE_ROOT=/var/runner/workspace
LOG_RETENTION_DAYS=7